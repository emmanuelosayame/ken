// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Item {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  decsription String
  price       Int
  sold        Int
}

type CartItem {
  id       String
  quantity Int
}

model Cart {
  id    String     @id @default(auto()) @map("_id") @db.ObjectId
  uid   String     @unique()
  items CartItem[]
}

model Customer {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}
